{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}
  {% block stylesheets %}
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
      <style>
          body{


          }


          .form{
              margin-left:auto;
              margin-right:auto;
              text-align:center;
              margin-top:150px;
              height:1500px;
              width:100%;
          }

          input:focus {
              outline: 1px dashed red;
          }

          .left{
              color:white;
              padding-left:30px;
              padding-right:30px;
              padding-top:150px;
              float:left;
              width:50%;

              background-color: #2a2a72;
              background-image: linear-gradient(315deg, #2a2a72 0%, #009ffd 74%);

              height:500px;
          }

          .left button{
              font-size:35px;
              border-radius:50px;
              letter-spacing:4px;
              padding-left:40px;
              padding-right:40px;
          }

          .left p{
              font-size:25px;
              text-align:justify;
              margin-top:15px;
              margin-bottom:15px;

          }

          .right{
              float:right;
              width:50%;
              padding-top:10px;
              color:#ee8e6b;


          }

          .right h1{
              color:#009ffd ;
          }

          .right input{
              margin-left:auto;
              margin-right:auto;
              width:60%;
              border:none;
              background-color:#f7f7f7;

          }

          .right button{
              margin-left:auto;
              margin-right:auto;
              margin-top:40px;
              width:60%;
              border-radius:50px;
              background-color: #2a2a72;
              background-image: linear-gradient(315deg, #2a2a72 0%, #009ffd 74%);
              font-size:20px;
              padding-top:10px;
              padding-bottom:10px;
              border:none;
              color:white;
          }





          @media (max-width: 768px) {
              body{
                  background-color: #2a2a72;
                  background-image: linear-gradient(315deg, #2a2a72 0%, #009ffd 74%);


              }

              .right h1{
                  color:white;
                  -webkit-animation: text-focus-in 1s cubic-bezier(0.550, 0.085, 0.680, 0.530) forwards;
                  animation: text-focus-in 1s cubic-bezier(0.550, 0.085, 0.680, 0.530) forwards;
              }
              @-webkit-keyframes text-focus-in {
                  0% {
                      -webkit-filter: blur(12px);
                      filter: blur(12px);
                      opacity: 0;
                  }
                  100% {
                      -webkit-filter: blur(0px);
                      filter: blur(0px);
                      opacity: 1;
                  }
              }

              .right{
                  float:right;
                  width:100%;
                  padding-top:10px;
                  color:#ee8e6b;
              }

              .right button{
                  -webkit-box-shadow: 0px 0px 12px 3px rgba(0,0,0,0.43);
                  box-shadow: 0px 0px 12px 3px rgba(0,0,0,0.43);
                  background-color: #2d3436;
                  background-image: linear-gradient(315deg, #2d3436 0%, #000000 74%);
                  width:60%;
                  padding-top:10px;
                  color:white;
                  -webkit-animation: bounce-in-bottom 1.1s both;
                  animation: bounce-in-bottom 1.1s both;
              }

              @-webkit-keyframes bounce-in-bottom {
                  0% {
                      -webkit-transform: translateY(500px);
                      transform: translateY(500px);
                      -webkit-animation-timing-function: ease-in;
                      animation-timing-function: ease-in;
                      opacity: 0;
                  }
                  38% {
                      -webkit-transform: translateY(0);
                      transform: translateY(0);
                      -webkit-animation-timing-function: ease-out;
                      animation-timing-function: ease-out;
                      opacity: 1;
                  }
                  55% {
                      -webkit-transform: translateY(65px);
                      transform: translateY(65px);
                      -webkit-animation-timing-function: ease-in;
                      animation-timing-function: ease-in;
                  }
                  72% {
                      -webkit-transform: translateY(0);
                      transform: translateY(0);
                      -webkit-animation-timing-function: ease-out;
                      animation-timing-function: ease-out;
                  }
                  81% {
                      -webkit-transform: translateY(28px);
                      transform: translateY(28px);
                      -webkit-animation-timing-function: ease-in;
                      animation-timing-function: ease-in;
                  }
                  90% {
                      -webkit-transform: translateY(0);
                      transform: translateY(0);
                      -webkit-animation-timing-function: ease-out;
                      animation-timing-function: ease-out;
                  }
                  95% {
                      -webkit-transform: translateY(8px);
                      transform: translateY(8px);
                      -webkit-animation-timing-function: ease-in;
                      animation-timing-function: ease-in;
                  }
                  100% {
                      -webkit-transform: translateY(0);
                      transform: translateY(0);
                      -webkit-animation-timing-function: ease-out;
                      animation-timing-function: ease-out;
                  }
              }


              .right input{
                  border-radius:50px;
                  background-color:#F0F8FF;

              }

              .left {
                  display:none;

              }

              .form{
                  margin-left:auto;
                  margin-right:auto;
                  text-align:center;
                  margin-top:150px;
                  margin-bottom:250px;
                  height:500px;
                  width:100%;

              }

          }



      </style>
  {% endblock %}
{% block body %}


<div class="container">
    <div class="row">
        <div class="form col-lg-10 col-md-12 col-sm-12">

            <div class="left col-lg-6 col-md-6 col-sm-6 ">

                <h1>Welcome Back!</h1>

                <p>To keep connected with us please login with your personal info</p>
                <button type="button" class="btn btn-outline-light">Giriş Yap</button>

            </div>

            <div class="right ">

                <h1>Kayıt Ol </h1>
                   {{ form_start(registrationForm) }}
           <div class="form-control">    {{ form_row(registrationForm.email) }}</div>
                <div class="form-control">   {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}</div>
                    <div class="form-control">   {{ form_row(registrationForm.agreeTerms) }}</div>

                <button type="submit" class="btn">Register</button>
                {{ form_end(registrationForm) }}

            </div>


        </div>
    </div>
</div>

    {% endblock %}
